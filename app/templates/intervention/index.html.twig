{% extends 'base.html.twig' %}

{% block title %}Interventions{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title mb-4">Liste des interventions</h1>

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Date de création</th>
                        <th>Date d'intervention</th>
                        <th>Urgente</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for intervention in interventions %}
                        <tr>
                            <td>{{ intervention.id }}</td>
                            <td>{{ intervention.dateCreation|date('d/m/Y') }}</td>
                            <td>{{ intervention.dateIntervention|date('d/m/Y') }}</td>
                            <td>{{ intervention.isUrgent ? 'Oui' : 'Non' }}</td>
                            <td>
                                <a href="{{ path('app_intervention_show', {'id': intervention.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                                <a href="{{ path('app_intervention_edit', {'id': intervention.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucune intervention trouvée.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Retour
    </a>
    <a href="{{ path('app_intervention_new') }}" class="btn btn-success">
        <i class="fas fa-plus"></i> Nouvelle intervention
    </a>
</div>
            </div>
        </div>
    </div>
{% endblock %}