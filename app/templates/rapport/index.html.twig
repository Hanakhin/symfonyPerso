{% extends 'base.html.twig' %}

{% block title %}Rapports{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title mb-4">Liste des rapports</h1>

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Description</th>
                        <th>Utilisateur</th>
                        <th>Intervention Id</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for rapport in rapports %}
                        <tr>
                            <td>{{ rapport.id }}</td>
                            <td>{{ rapport.description }}</td>
                            <td>{{ rapport.getuser().email }}</td>
                            <td>{{ rapport.getintervention().id }}</td>
                            <td>
                                <a href="{{ path('app_rapport_show', {'id': rapport.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                                <a href="{{ path('app_rapport_edit', {'id': rapport.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun rapport trouv√©.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                    <a href="{{ path('app_rapport_new') }}" class="btn btn-success">
                        <i class="fas fa-plus"></i> Nouveau rapport
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}