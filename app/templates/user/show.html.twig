{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body { background-color: #fff5f5; }
        .table { background-color: #fff; }
        .table-header { background-color: #dc3545; color: white; }
        .btn-custom-red { background-color: #dc3545; border-color: #dc3545; color: white; }
        .btn-custom-red:hover { background-color: #c82333; border-color: #bd2130; }
        .btn-outline-custom-red { color: #dc3545; border-color: #dc3545; }
        .btn-outline-custom-red:hover { color: #fff; background-color: #dc3545; border-color: #dc3545; }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4 text-danger">User Details</h1>

        <div class="card">
            <div class="card-header table-header">
                <h2 class="mb-0">{{ user.prenom }} {{ user.nom }}</h2>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th>First Name</th>
                            <td>{{ user.prenom }}</td>
                        </tr>
                        <tr>
                            <th>Last Name</th>
                            <td>{{ user.nom }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ user.isActive ? 'Active' : 'Inactive' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Retour</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-custom-red">Edit</a>
        </div>
    </div>
{% endblock %}