{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body { background-color: #fff5f5; }
        .table { background-color: #fff; }
        .table-header { background-color: #dc3545; color: white; }
        .btn-custom-red { background-color: #dc3545; border-color: #dc3545; color: white; }
        .btn-custom-red:hover { background-color: #c82333; border-color: #bd2130; }
        .btn-outline-custom-red { color: #dc3545; border-color: #dc3545; }
        .btn-outline-custom-red:hover { color: #fff; background-color: #dc3545; border-color: #dc3545; }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4 text-danger">User Index</h1>

        {% if users|length > 0 %}
            <table class="table table-bordered">
                <thead class="table-header">
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>{{ user.prenom }}</td>
                        <td>{{ user.nom }}</td>
                        <td>{{ user.isActive ? 'Active' : 'Inactive' }}</td>
                        <td>
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-custom-red">View</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-custom-red">Edit</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="alert alert-danger">No users found.</p>
        {% endif %}

            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Retour</a>
    </div>
{% endblock %}